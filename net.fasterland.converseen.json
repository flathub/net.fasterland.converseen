{
    "id": "net.fasterland.converseen",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "converseen",
    "rename-appdata-file": "converseen.appdata.xml",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "imagemagick",
            "config-opts": [
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ImageMagick/ImageMagick",
                    "tag": "7.0.7.7",
                    "commit": "e12602b39b5e778240d286b6f9bbbc0fe3fb26c5",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                }
            ],
            "cleanup": [
                "/include",
                "/share/doc",
                "/lib/*.la"
            ]
        },
        {
            "name": "converseen",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Faster3ck/Converseen.git",
                    "tag": "v0.9.9.7",
                    "commit": "f44314da6daca22550aab26bcb1d7fd7d5ff1e07",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ]
        }
    ]
}
