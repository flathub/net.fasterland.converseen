{
    "id": "net.fasterland.converseen",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "converseen",
    "rename-appdata-file": "converseen.appdata.xml",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "imagemagick",
            "config-opts": [
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ImageMagick/ImageMagick",
                    "tag": "7.1.0-47",
                    "commit": "47c6f10607fd1b1e6e9226cd9869479902b65821",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.-]+)$"
                    }
                }
            ],
            "cleanup": [
                "/include",
                "/share/doc",
                "/lib/*.la"
            ]
        },
        {
            "name": "converseen",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Faster3ck/Converseen.git",
                    "tag": "v0.9.9.8",
                    "commit": "ab48ae59abe3bf3ea611565a47283bee4ac87348",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ]
        }
    ]
}
